@using EntityLayer.Concrete
@model List<Annoucement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string color = "";
                            if (item.Status == "Yeni Yazı")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Yeni Video")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Yeni Etkinlik")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status == "Bootcamp")
                            {
                                color = "badge badge-success";
                            }
                            else
                            {
                                color = "badge badge-secondary";
                            }

                            <tr>
                                <td>@item.AnnoucementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td>
                                    <a href="/Writer/Default/AnnoucementDetails/@item.AnnoucementId" class="btn btn-outline-primary">
                                        Detaylar
                                    </a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

