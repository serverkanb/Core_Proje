@using Core_Proje.Areas.Writer.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash-v.01/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash-v.01/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash-v.01/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash-v.01/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash-v.01/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash-v.01/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Hızlıca sisteme kaydını gerçekleştirebilirsini</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                    <input type="text" asp-for="SurName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" asp-for="UserName" class="form-control" />
                                </div>
                                
                                <div class="form-group">
                                    <label>Görsel Url</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" asp-for="ImageUrl" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="text" asp-for="Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                
                                <div class="form-group">
                                    <label>Mail Adresiniz</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" asp-for="Mail" class="form-control" />
                                </div>

                                
                                <div class="mt-3">
                                    <button class="btn btn-primary">Kayıt Ol</button>
                                </div>
                               @*  <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div> *@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
   
</body>

</html>
